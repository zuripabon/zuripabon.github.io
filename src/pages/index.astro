---
import Layout from '../layouts/Layout.astro';
import Typography from '../components/Typography.astro';
import Build from '../components/Build.svelte';
import Canvas from '../components/Canvas.astro';
---
<Layout title="I am Zuri Pabón">
	<main class="center">
    <header class="header-container">
      <Typography variant="heading" uppercase>I am <span class="text-gradient">Zuri Pabón</span></Typography>
    </header>
    <div class="mobile">
      <Typography variant="heading" uppercase>I am</Typography>
      <Typography variant="heading" uppercase><span class="text-gradient">Zuri Pabón</span></Typography>
    </div>
		<section class="body-container">
      <Typography variant="paragraph">Over a decade of experience in computer science. I specialize in <strong class="text-gradient">UI</strong> and <strong class="text-gradient">CLI</strong> engineering. My journey as engineer is fueled by creativity, problem-solving, and a relentless drive for excellence.</Typography>
    </section>
		<!-- <p class="desc"> Let's build something <Start progress={100}>together</Start></p> -->
		<Build client:visible /> 
		<!-- <p class="desc-terminal">$> ./build --something-awesome --together <span class="loading-chars">{loadingChars[loadingIndex]}</span></p> -->
	</main>
  <!-- <Canvas client:visible/> -->
</Layout>

<style is:global>

  .body-container {
    display: flex;
    flex-direction: column;
    align-items: end;
    text-align: end;
    margin-bottom: var(--spacing);
  }

  .mobile {
		font-size: 1.8rem;
	}

  .header-container {
    display: none;
  }

  .subtitle {
    text-align: end;
    margin-top: 100px;
    max-width: 875px;
  }

	.desc {
		font-size: 1.7rem;
	}

	.center {
		display: flex;
    flex-direction: column;
    justify-content: center;
    width: 90%;
		max-width: 1080px;
    row-gap: var(--spacing);
    overflow: clip;
    height: 100%;
    margin: 3rem auto;
	}
	
	.text-gradient {
		background-image: var(--accent-gradient);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-size: 400%;
		background-position: 0%;
	}

  @media only screen and (min-height: 560px) {
    
    .center {
      height: calc(100vh - 6rem);
      margin: 3rem auto;
	  }
  }

  @media only screen and (min-width: 650px) {
    
    .mobile {
      font-size: 2.5rem;
      display: block;
    }

    .desc {
      font-size: 2rem;
    }
  }

  @media only screen and (min-width: 905px) {
    .header-container {
      display: block;
    }
    .mobile {
      display: none;
    }
  }
</style>
